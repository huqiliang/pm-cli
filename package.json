{
  "private": true,
  "workspaces": [
    "packages"
  ],
  "name": "vc-cli",
  "version": "1.0.0",
  "description": "Initialization tool for vue project",
  "main": "lib/index.js",
  "scripts": {
    "dev": "babel src -d packages && node  packages/index",
    "build": "babel src -d packages",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "vue",
    "cli",
    "initial"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:huqiliang/vc-cli.git"
  },
  "author": "huqiliang",
  "config": {
    "ghooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "validate-commit-msg"
    },
    "lint-staged": {
      "*.{js,ts}": [
        "eslint --fix",
        "git add"
      ],
      "packages/*": [
        "eslint --fix",
        "git add"
      ]
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "test",
        "chore",
        "refactor",
        "opti"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "请输入message信息!",
      "helpMessage": "Commit message 格式错误， http://www.ruanyifeng.com/blog/2016/01/commit_message_change_log.html"
    }
  },
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^5.16.0",
    "ghooks": "^2.0.4",
    "validate-commit-msg": "^2.14.0",
    "vuepress": "^1.0.0-alpha.46",
    "webpack": "^4.29.6"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "clear": "^0.1.0",
    "clui": "^0.3.6",
    "configstore": "^4.0.0",
    "figlet": "^1.2.1",
    "inquirer": "^6.2.2",
    "lodash": "^4.17.11",
    "minimist": "^1.2.0",
    "simple-git": "^1.110.0"
  }
}
