{
  "private": true,
  "workspaces": [
    "packages"
  ],
  "bin": {
    "pm": "./build/bin/pm.js"
  },
  "name": "pm-cli",
  "version": "1.0.0",
  "description": "Initialization tool for vue project",
  "main": "src/bin/index.js",
  "scripts": {
    "dev": "gulp",
    "build": "gulp product",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "docs:publish": "sh deploy.sh",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "vue",
    "cli",
    "initial"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:huqiliang/vc-cli.git"
  },
  "author": "huqiliang",
  "config": {
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "test",
        "chore",
        "refactor",
        "opti"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "请输入message信息!",
      "helpMessage": "Commit message 格式错误， http://www.ruanyifeng.com/blog/2016/01/commit_message_change_log.html"
    }
  },
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "eslint": "^5.16.0",
    "ghooks": "^2.0.4",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-if": "^2.0.2",
    "gulp-minify": "^3.1.0",
    "gulp-plumber": "^1.2.1",
    "gulp-shell": "^0.7.0",
    "gulp-watch": "^5.0.1",
    "uni": "0.0.6",
    "validate-commit-msg": "^2.14.0",
    "vuepress": "^1.0.0-alpha.46"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "clear": "^0.1.0",
    "cli-table": "^0.3.1",
    "clui": "^0.3.6",
    "commander": "^2.20.0",
    "configstore": "^4.0.0",
    "download-git-repo": "^1.1.0",
    "ejs": "^2.6.1",
    "express": "^4.17.0",
    "figlet": "^1.2.1",
    "http-proxy-middleware": "^0.19.1",
    "inquirer": "^6.2.2",
    "jsonfile": "^5.0.0",
    "koa": "^2.7.0",
    "lodash": "^4.17.11",
    "minimist": "^1.2.0",
    "ora": "^3.4.0",
    "shelljs": "^0.8.3",
    "simple-git": "^1.110.0"
  }
}
